@import "/style/common.wxss";

.form-label {
}

.form-icon {
  margin: 0 20rpx;
}

.form-wrapper {
  width: 50%;
  border-bottom: 1px solid rgba(0, 0, 0, 0.42);
  color: rgba(0, 0, 0, 0.87);
  position: relative;
}

.form-wrapper:hover {
  transition: border-bottom-color 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  border-bottom: 2px solid rgba(0, 0, 0, 0.87);
}

.form-ctx {
  margin-left: 20prx;
}

.row {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}

.select-arrow {
  border-style: solid;
  border-width: 14rpx;
  border-color: rgba(0, 0, 0, 0.54) transparent transparent transparent;
  width: 0;
  height: 0;
  position: absolute;
  right: 10rpx;
  bottom: 0;
}
