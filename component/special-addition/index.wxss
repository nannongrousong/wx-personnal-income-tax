@import "/style/common.wxss";

.form-label {
  color: rgba(33, 150, 243, 0.9);
  cursor: pointer;
}

.form-label:hover {
  color: rgba(33, 150, 243, 1);
}

.form-icon {
  margin: 0 20rpx;
  height: 40rpx;
  width: 40rpx;
}

.form-wrapper {
  width: 50%;
}

input.form-wrapper {
  padding-left: 10rpx;
}

.row {
  padding: 15rpx 0 10rpx 0;
  display: flex;
  align-items: center;
}

.row > view {
  display: flex;
  align-items: center;
}
